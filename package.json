{
  "name": "my-nfts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network evmFlowTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network evmFlowMainnet",
    "mint": "hardhat run scripts/mint.ts",
    "mint:testnet": "hardhat run scripts/mint.ts --network evmFlowTestnet",
    "mint:mainnet": "hardhat run scripts/mint.ts --network evmFlowMainnet",
    "mint:testnet:nft": "hardhat mint --network evmFlowTestnet --symbol 'VNFT' --count",
    "mint:mainnet:nft": "hardhat mint --network evmFlowMainnet --symbol 'KNFT' --count",
    "verify:testnet": "NETWORK=evmFlowTestnet SYMBOL=ONFT ts-node scripts/verify.ts",
    "verify:mainnet": "NETWORK=evmFlowMainnet SYMBOL=FNFT ts-node scripts/verify.ts",
    "verify-metadata:testnet": "hardhat verify-metadata --network evmFlowTestnet --symbol",
    "verify-metadata:mainnet": "hardhat verify-metadata --network evmFlowMainnet --symbol",
    "set-uri": "hardhat run scripts/set-contract-uri.ts",
    "set-uri:testnet": "hardhat run scripts/set-contract-uri.ts --network evmFlowTestnet",
    "set-uri:mainnet": "hardhat run scripts/set-contract-uri.ts --network evmFlowMainnet",
    "set-uri:nft": "hardhat set-uri --network evmFlowMainnet --symbol FNFT --uri https://raw.githubusercontent.com/bthaile/nft-collections/refs/heads/main/metadata/ForestMist.json",
    "verify:nft": "hardhat verify-contract --network evmFlowMainnet --symbol MNFT",
    "deploy:testnet:NFT": "hardhat deploy --network evmFlowTestnet --symbol ONFT --name \"Oceans NFT\"",
    "deploy:mainnet:NFT": "hardhat deploy --network evmFlowMainnet --symbol FNFT --name \"Forest Mist NFT\"",
    "transfer:testnet": "hardhat transfer --network evmFlowTestnet",
    "transfer:mainnet": "hardhat transfer --network evmFlowMainnet",
    "dev": "npx vite web",
    "build": "tsc && vite build web && tailwindcss -i ./web/styles/main.css -o ./dist/web/styles.css",
    "preview": "vite preview web",
    "batch-transfer:mainnet": "hardhat batch-transfer --network evmFlowMainnet --symbol MNFT --to 0x0000000000000000000000021403a2acbc78d508 --start 5 --count 5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@openzeppelin/contracts": "^5.2.0",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^22.13.4",
    "@types/node-fetch": "^2.6.12",
    "chai": "^4.2.0",
    "dotenv": "^16.4.7",
    "hardhat": "^2.22.18",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5",
    "vite": "^5.1.4",
    "viem": "^2.23.3"
  }
}
